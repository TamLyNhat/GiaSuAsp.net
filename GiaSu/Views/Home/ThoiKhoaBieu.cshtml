@using GiaSu.ViewModel
@model List<ChiTietHocVien>

<h1 class="text-dark text-center">THỜI KHÓA BIỂU</h1>
<hr />

<table border="1">
    <tr class="font-weight-bold text-center">
        <td width="150">Tên khóa học</td>
        <td width="150">Tên lớp học</td>
        <td width="150">Lầu</td>
        <td width="180">Mã phòng</td>
        <td width="150">Buổi</td>
        <td width="150">Ngày</td>
    </tr>
    @foreach (var item in Model)
    {
        string B, N;
        if (item.Buoi == true)
        {
            B = "Sáng";
        }
        else
        {
            B = "Chiều";
        }

        if (item.Ngay == true)
        {
            N = "2,4,6";
        }
        else
        {
            N = "3,5,7";
        }
        <tr>
            <td>@item.TenKhoaHoc</td>
            <td>@item.TenLopHoc</td>
            <td>@item.Lau</td>
            <td>@item.MaPhong</td>
            <td>Buổi @B</td>
            <td>Ngày @N</td>
        </tr>
    }
</table>

<div>
    @Html.ActionLink("Trang chủ", "Index", "Home", "", new { @class = "btn btn-success" })
</div>
